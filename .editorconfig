root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.cs]
dotnet_sort_system_directives_first = true
csharp_space_after_keywords_in_control_flow_statements = true
csharp_new_line_before_open_brace = all

[*.json]
indent_size = 2

[*.tsx]
indent_size = 2
